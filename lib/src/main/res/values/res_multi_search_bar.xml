<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="MultiSearchBar">
		<attr name="multiSearchBarTitle1"
			format="string"/>
		<attr name="multiSearchBarTitle2"
			format="string"/>
		<attr name="multiSearchBarHint1"
			format="string"/>
		<attr name="multiSearchBarHint2"
			format="string"/>
		<attr name="multiSearchBarHint3"
			format="string"/>
		<attr name="multiSearchBarPopupDrawable1"
			format="reference"/>
		<attr name="multiSearchBarPopupDrawable2"
			format="reference"/>
		<attr name="multiSearchBarPopupDrawable3"
			format="reference"/>
		<attr name="multiSearchBarPopupText1"
			format="string"/>
		<attr name="multiSearchBarPopupText2"
			format="string"/>
		<attr name="multiSearchBarPopupText3"
			format="string"/>
		<attr name="multiSearchBarLeftSrc"
			format="reference"/>
		<attr name="multiSearchBarType"
			format="enum">
			<enum name="One"
				value="0"/>
			<enum name="Two"
				value="1"/>
			<enum value="2"
				name="Three"/>
			<enum value="3"
				name="Popup"/>
		</attr>
	</declare-styleable>

	<dimen name="multiSearchBarMargin16dp">16dp</dimen>
	<dimen name="multiSearchBarMargin">12dp</dimen>
	<dimen name="multiSearchBarNormalTextSize">15sp</dimen>
	<dimen name="multiSearchBarLargeTextSize">17sp</dimen>

	<color name="multiSearchBarGold">#d3b263</color>
	<color name="multiSearchBarGoldDark">#ac9255</color>
	<color name="multiSearchBarGray">#6a6a6a</color>
	<color name="gray7f">#7f7f7f</color>
	<color name="black2A">#2A2A2A</color>
	<color name="grayE3">#e3e3e3</color>

	<style name="MultiSearchBarEditTextStyle"
		parent="Base.Widget.AppCompat.EditText">
		<item name="android:textColorHint">@color/multiSearchBarGray</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@null</item>
		<item name="android:textCursorDrawable">@drawable/multi_search_bar_shape_cursor</item>
		<item name="android:textSize">@dimen/multiSearchBarNormalTextSize</item>
	</style>

	<style name="MultiSearchBarTextViewStyle"
		parent="TextAppearance.AppCompat">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="MultiSearchBarNormalTextViewStyle"
		parent="MultiSearchBarTextViewStyle">
		<item name="android:textSize">@dimen/multiSearchBarNormalTextSize</item>
	</style>

	<style name="MultiSearchBarTitleTextViewStyle"
		parent="MultiSearchBarTextViewStyle">
		<item name="android:textSize">@dimen/multiSearchBarLargeTextSize</item>
	</style>

	<style name="MultiSearchBarPopupImage">
		<item name="android:layout_margin">@dimen/multiSearchBarMargin</item>
		<item name="android:minWidth">16dp</item>
		<item name="android:minHeight">16dp</item>
	</style>

	<style name="MultiSearchBarPopupTextViewStyle"
		parent="TextAppearance.AppCompat">
		<item name="android:layout_marginRight">@dimen/multiSearchBarMargin</item>
		<item name="android:textSize">16sp</item>
	</style>
</resources>